---
import Layout from "@layouts/Layout.astro";
import Container from "@components/Container.astro";
import ArrowCardButton from "@components/ArrowCardButton.astro";
import RootPageIndex from "@components/RootPageIndex.astro";
---

<RootPageIndex title="Resume">
  <div class="animate mb-4">
    <p class="mb-1">The PDF resume:</p>
    <section>
      <ArrowCardButton href="/resume/resume.pdf" title="Download PDF" />
    </section>
  </div>
  <div class="animate mb-4">
    <p class="mb-1">The DOCX resume:</p>
    <section>
      <ArrowCardButton href="/resume/resume.docx" title="Download DOCX" />
    </section>
  </div>
</RootPageIndex>
