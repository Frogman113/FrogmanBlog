---
import BackToPrevious from "@components/BackToPrevious.astro";
import Container from "@components/Container.astro";
import FormattedDate from "@components/FormattedDate.astro";
import TableOfContents from "@components/TableOfContents.astro";
import Layout from "@layouts/Layout.astro";
import {
  getFilteredCollectionEntries,
  readingTime,
  resolvePath,
} from "@lib/utils";

export async function getStaticPaths() {
  const { entries } = await getFilteredCollectionEntries("talks");
  return entries.map((post) => ({
    params: { slug: post.slug },
    props: post,
  }));
}

const talk = Astro.props;
const { Content, headings } = await talk.render();
---

<Layout title={talk.data.title}>
  <Container>
    <div class="animate">
      <BackToPrevious href={resolvePath("/talks", Astro.url.pathname)}
        >Back to talks</BackToPrevious
      >
    </div>
    <div class="animate my-10 space-y-1">
      <div class="flex items-center gap-1.5">
        <div class="font-base text-sm">
          <FormattedDate date={talk.data.date} />
        </div>
        &bull;
        <div class="font-base text-sm">
          {readingTime(talk.body)}
        </div>
      </div>
      <h1 class="text-3xl font-semibold text-black dark:text-white">
        {talk.data.title}
      </h1>
    </div>
    <TableOfContents headings={headings} />
    <article class="animate">
      <Content />
    </article>
  </Container>
</Layout>
