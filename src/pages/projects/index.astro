---
import Layout from "@layouts/Layout.astro";
import Container from "@components/Container.astro";
import { PROJECTS } from "@consts";
import ProjectCardButton from "@components/ProjectCardButton.astro";
import { getFilteredCollectionEntries } from "@lib/utils";

const { entries } = await getFilteredCollectionEntries("projects");
---

<Layout title={PROJECTS.title}>
  <Container>
    <aside data-pagefind-ignore>
      <div class="space-y-10">
        <div class="animate font-semibold text-black dark:text-white">
          Projects
        </div>
        <ul class="animate not-prose flex flex-col gap-4">
          {
            entries.map((project) => (
              <li>
                <ProjectCardButton entry={project} />
              </li>
            ))
          }
        </ul>
      </div>
    </aside>
  </Container>
</Layout>
